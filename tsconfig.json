{
  "compilerOptions": {
    "outDir": "dist",
    "module": "CommonJS",
    "target": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "pretty": true,
    "removeComments": false,
    "baseUrl": "./",
    "paths": {
      "@node-mongo-backup-restore/*": [
        "packages/*/src"
      ]
    }
  },
  "include": [
    "apps",
    "packages"
  ]
}